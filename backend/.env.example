# Environment variables for the AI Interviewer app

# Database Configuration
DATABASE_URL=postgresql://username:password@localhost:5432/ai_interviewer
DATABASE_TEST_URL=postgresql://username:password@localhost:5432/ai_interviewer_test

# AI API Keys
GROQ_API_KEY=GROY_API_KEY_PLACEHOLDER
HUGGINGFACE_API_KEY=HUGGINGFACE_API_KEY_PLACEHOLDER

# Email Configuration
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your_email@gmail.com
SMTP_PASSWORD=your_app_password

# JWT Configuration
SECRET_KEY=your_super_secret_key_here
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# Application Settings
DEBUG=True
FRONTEND_URL=http://localhost:3000
BACKEND_URL=http://localhost:8000

# File Upload Settings
MAX_FILE_SIZE=50000000  # 50MB
UPLOAD_DIR=./uploads

# Computer Vision Settings
CHEAT_DETECTION_THRESHOLD=0.8
MAX_CHEAT_VIOLATIONS=3